{namespace Sidebar}

/**
 * @param section
 */
{template .render}
	<nav class="navbar navbar-inverse navbar-lexicon-site navbar-fixed">
		<div class="navbar-header navbar-header-left-xs">
			<a class="navbar-brand" href="/">
				<img class="logo" src="/images/LexiconLogo.png"/>
				<small>by Liferay</small>
			</a>
		</div>

		<button aria-controls="bs-navbar" aria-expanded="false" class="collapsed sidebar-toggler navbar-toggle btn-link" type="button">
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
			<span class="sr-only">Toggle navigation</span>
		</button>
	</nav>

	<nav class="sidenav-fixed sidenav-menu-slider sidebar-toggler-content">
		<div class="sidebar sidebar-inverse sidebar-lexicon-site sidenav-menu">
			<div class="sidebar-header">
				<div class="sidebar-search">
					{call ElectricSearchAutocomplete.render}
						{param maxResults: 5 /}
						{param path: '/docs/' /}
						{param placeholder: 'Search' /}
					{/call}
				</div>
			</div>

			<div class="sidebar-body">
				{call ElectricNavigation.render}
					{param anchorVariant: 'sidebar' /}
					{param elementClasses: 'nav nav-nested nav-pills nav-stacked' /}
					{param listItemClasses: '' /}
					{param section: $section /}
				{/call}
			</div>
		</div>
	</nav>
{/template}

/**
 * @param page
 */
{deltemplate ElectricNavigation.anchor variant="'sidebar'"}
	{if $page.icon}
		<svg class="lexicon-icon icon-monospaced">
			<use xlink:href="/vendor/lexicon/icons.svg#{$page.icon}" />
		</svg>
	{/if}
	<a href="{$page.url}">
		<span>{$page.title}</span>
	</a>
{/deltemplate}
